.index

  .shoutbux-profile
    .display-image
      border-radius: 50%

    .user-info
      padding-top: 24px

  .stats
    margin-top: 15px

    .stat, .value
      display: block

  .timeline
    .shout
      padding: 4px
      border-bottom: 1px solid #e1e8ed
      margin-top: 10px

    span.fullname
      color: #292f33
      font-weight: bold

    span.username, span.date-posted, span.separator
      font-size: 12px
      color: #8899a6

  .post-shout
    .col-md-12
      padding: 5px

    span.remaining-characters
      padding: 4px
