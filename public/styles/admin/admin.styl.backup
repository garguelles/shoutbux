.login-form
  width: 30%
  height: 200px
  padding: 8px
  margin: 0 auto
  right: 0
  left: 0
  top: 50%
  margin-top: -100px
  position: absolute
  visibility: hidden

.main-header
  position: relative
  max-height: 100px
  top: 0
  right: 0
  left: 0

  a.logo
    float: left
    font-size: 20px
    text-align: center
    width: 220px
    font-weight: 500
    padding: 0 10px
    height: 50px
    display: block
    line-height: 50px
    background: #283744
    color: #fff

  .navbar-static-top
    margin-left: 220px
    height: 50px
    margin-bottom: 0

    a.sidebar-toggle
      float: left
      padding: 9px 5px
      margin-top: 8px
      margin-right: 0
      margin-bottom: 8px
      margin-left: 5px
      background-color: transaparent
      color: black
